@model Appointment

@{
    ViewData["Title"] = "Détails du rendez-vous";
}

<h1 class="mb-4">@ViewData["Title"]</h1>
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PatientName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PatientName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Time)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Time)
        </dd>
        <dt class="col-sm-2">Statut</dt>
        <dd class="col-sm-10">
            @{
                string statutFr = Model.Status switch
                {
                    AppointmentStatus.Pending => "En attente",
                    AppointmentStatus.Approved => "Approuvé",
                    AppointmentStatus.Rejected => "Rejeté",
                    _ => Model.Status.ToString()
                };
            }
            @statutFr
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Modifier</a>
    }
    <a asp-action="Index" class="btn btn-secondary">Retour</a>
</div>
