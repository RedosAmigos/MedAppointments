@model List<MedAppointments.Models.RoleViewModel>
@{
    ViewData["Title"] = "Modifier les rôles";
}

<h1 class="mb-4">Modifier les rôles de @ViewBag.Fullname</h1>

<form asp-action="Manage" method="post">
    <input type="hidden" name="userId" value="@ViewBag.UserId" />
    <table class="table">
        <tr>
            <th>Rôle</th>
            <th>Attribué</th>
        </tr>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@Model[i].RoleName</td>
                <td>
                    <input type="radio"
                           name="selectedRole"
                           value="@Model[i].RoleName"
                           @(Model[i].IsSelected ? "checked" : "") />
                </td>
            </tr>
        }
    </table>
    <button type="submit" class="btn btn-primary">Appliquer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>

